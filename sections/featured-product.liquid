{%- assign product = all_products[section.settings.product] -%}

{%- capture section_settings -%}
{
  "showShippingEstimator": false,
  "showQuantitySelector": {{ section.settings.show_quantity_selector | json }},
  "showPaymentButton": {{ section.settings.show_payment_button | json }},
  "showInventoryQuantity": {{ section.settings.show_inventory_quantity | json }},
  "lowInventoryThreshold": {{ section.settings.low_inventory_threshold | json }},
  "galleryTransitionEffect": {{ section.settings.carousel_effect | json }},
  "enableImageZoom": {{ section.settings.enable_image_zoom | json }},
  "zoomEffect": {{ section.settings.zoom_effect | json }},
  "productOptions": {{ product.options | json | escape }},
  "enableHistoryState": false,
  "infoOverflowScroll": false,
  "isQuickView": false
}
{%- endcapture -%}

<section class="section" data-section-id="{{ section.id }}" data-section-type="product" data-section-settings='{{ section_settings }}'>
  <div class="container">
    {%- if section.settings.title != blank -%}
      <header class="section__header">
        <h2 class="section__title heading h3">{{ section.settings.title | escape }}</h2>

        {%- if section.settings.link_title != blank -%}
          <a href="{{ section.settings.link_url | default: product.url | default: '#' }}" class="section__action-link link">{{ section.settings.link_title }} {% render 'icon', icon: 'tail-right' %}</a>
        {%- endif -%}
      </header>
    {%- endif -%}
  </div>

  <div class="container container--flush">
    <div class="featured-product">
      {%- unless product.empty? -%}
        {%- render 'product-gallery', product: product -%}
        {%- render 'product-info', product: product -%}
      {%- else -%}
        {% comment %}
        ------------------------------------------------------------------------------
        PLACEHOLDER (FOR ONBOARDING ONLY)
        ------------------------------------------------------------------------------
        {% endcomment %}

        <div class="card">
          <div class="card__section">
            <div class="product-gallery">
              <div class="product-gallery__carousel-wrapper">
                <div class="product-gallery__carousel {% if section.settings.enable_image_zoom %}product-gallery__carousel--zoomable{% endif %}" data-image-count="1">
                  <div class="product-gallery__carousel-item is-selected">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                </div>

                {%- if section.settings.enable_image_zoom -%}
                  <button class="product-gallery__zoom-notice link">{% render 'icon', icon: 'zoom' %} {{ 'product.general.zoom' | t }}</button>
                {%- endif -%}
              </div>
            </div>
          </div>
        </div>

        <div class="card card--collapsed">
          {% comment %}<div class="card__section">{% endcomment %}
            {% comment %}<div class="product-info">{% endcomment %}
              {% comment %}{%- if section.settings.show_share_buttons -%}{% endcomment %}
                {% comment %}{%- capture share_buttons -%}{% endcomment %}
                  {% comment %}<ul class="social-media__item-list list--unstyled">{% endcomment %}
                    {% comment %}<li class="social-media__item social-media__item--facebook"><a href="#" target="_blank" rel="noopener">{%- render 'icon', icon: 'facebook' -%}</a></li>{% endcomment %}
                    {% comment %}<li class="social-media__item social-media__item--pinterest"><a href="#" target="_blank" rel="noopener">{%- render 'icon', icon: 'pinterest' -%}</a></li>{% endcomment %}
                    {% comment %}<li class="social-media__item social-media__item--twitter"><a href="#" target="_blank" rel="noopener">{%- render 'icon', icon: 'twitter' -%}</a></li>{% endcomment %}
                    {% comment %}<li class="social-media__item"><a href="#" target="_blank" rel="noopener">{% render 'icon', icon: 'email' %}</a></li>{% endcomment %}
                  {% comment %}</ul>{% endcomment %}
                {% comment %}{%- endcapture -%}{% endcomment %}
              {% comment %}{%- endif -%}{% endcomment %}
{% comment %}{% endcomment %}
              {% comment %}<div class="product-meta">{% endcomment %}
                {% comment %}<h3 class="product-meta__title heading h2">{{ 'home_page.onboarding.product_title' | t }}</h3>{% endcomment %}
{% comment %}{% endcomment %}
                {% comment %}{%- if section.settings.show_vendor or section.settings.show_sku -%}{% endcomment %}
                  {% comment %}<div class="product-meta__reference">{% endcomment %}
                    {% comment %}{%- if section.settings.show_vendor -%}{% endcomment %}
                      {% comment %}<a class="product-meta__vendor link link--accented" href="#">{{ 'home_page.onboarding.vendor_title' | t }}</a>{% endcomment %}
                    {% comment %}{%- endif -%}{% endcomment %}
{% comment %}{% endcomment %}
                    {% comment %}{%- if section.settings.show_sku -%}{% endcomment %}
                      {% comment %}<span class="product-meta__sku">{{ 'home_page.onboarding.product_sku' | t }}</span>{% endcomment %}
                    {% comment %}{%- endif -%}{% endcomment %}
                  {% comment %}</div>{% endcomment %}
                {% comment %}{%- endif -%}{% endcomment %}
{% comment %}{% endcomment %}
                {% comment %}{%- if section.settings.show_share_buttons -%}{% endcomment %}
                  {% comment %}<div class="product-meta__share-buttons hidden-phone">{% endcomment %}
                    {% comment %}{{ share_buttons }}{% endcomment %}
                  {% comment %}</div>{% endcomment %}
                {% comment %}{%- endif -%}{% endcomment %}
              {% comment %}</div>{% endcomment %}
{% comment %}{% endcomment %}
              {% comment %}<hr class="card__separator">{% endcomment %}
{% comment %}{% endcomment %}
              {% comment %}{%- if section.settings.show_description and section.settings.description_below_add_to_cart == false -%}{% endcomment %}
                {% comment %}<div class="product-meta__description rte">{% endcomment %}
                  {% comment %}{{ 'home_page.onboarding.product_description' | t }}{% endcomment %}
                {% comment %}</div>{% endcomment %}
              {% comment %}{%- endif -%}{% endcomment %}
{% comment %}{% endcomment %}
              {% comment %}<div class="product-form">{% endcomment %}
                {% comment %}<div class="product-form__info-list">{% endcomment %}
                  {% comment %}<div class="product-form__info-item">{% endcomment %}
                    {% comment %}<span class="product-form__info-title text--strong">{{ 'product.form.price' | t }}:</span>{% endcomment %}
{% comment %}{% endcomment %}
                    {% comment %}<div class="product-form__info-content">{% endcomment %}
                      {% comment %}<div class="price-list">{% endcomment %}
                        {% comment %}<span class="price">{{ 4000 | money_without_trailing_zeros }}</span>{% endcomment %}
                      {% comment %}</div>{% endcomment %}
                    {% comment %}</div>{% endcomment %}
                  {% comment %}</div>{% endcomment %}
{% comment %}{% endcomment %}
                  {% comment %}{%- if section.settings.show_inventory_quantity -%}{% endcomment %}
                    {% comment %}<div class="product-form__info-item">{% endcomment %}
                      {% comment %}<span class="product-form__info-title text--strong">{{ 'product.form.inventory' | t }}:</span>{% endcomment %}
{% comment %}{% endcomment %}
                      {% comment %}<div class="product-form__info-content">{% endcomment %}
                        {% comment %}<span class="product-form__inventory inventory inventory--high">{{ 'product.form.in_stock' | t }}</span>{% endcomment %}
                      {% comment %}</div>{% endcomment %}
                    {% comment %}</div>{% endcomment %}
                  {% comment %}{%- endif -%}{% endcomment %}
{% comment %}{% endcomment %}
                  {% comment %}{%- if section.settings.show_quantity_selector -%}{% endcomment %}
                    {% comment %}<div class="product-form__info-item">{% endcomment %}
                      {% comment %}<label for="{{ section.id }}-quantity" class="product-form__info-title text--strong">{{ 'product.form.quantity' | t }}:</label>{% endcomment %}
{% comment %}{% endcomment %}
                      {% comment %}<div class="product-form__info-content">{% endcomment %}
                        {% comment %}<div class="select-wrapper select-wrapper--small select-wrapper--primary">{% endcomment %}
                          {% comment %}{%- render 'icon', icon: 'arrow-bottom' -%}{% endcomment %}
{% comment %}{% endcomment %}
                          {% comment %}<select name="quantity" id="{{ section.id }}-quantity" class="product-form__quantity">{% endcomment %}
                            {% comment %}{%- for i in (1..10) -%}{% endcomment %}
                              {% comment %}<option value="{{ i }}" {% if forloop.first %}selected="selected"{% endif %}>{% if i < 10 %}{{ i }}{% else %}{{ i }}+{% endif %}</option>{% endcomment %}
                            {% comment %}{%- endfor -%}{% endcomment %}
                          {% comment %}</select>{% endcomment %}
                        {% comment %}</div>{% endcomment %}
                      {% comment %}</div>{% endcomment %}
                    {% comment %}</div>{% endcomment %}
                  {% comment %}{%- endif -%}{% endcomment %}
                {% comment %}</div>{% endcomment %}
{% comment %}{% endcomment %}
                {% comment %}<div class="product-form__add-to-cart">{% endcomment %}
                  {% comment %}{% comment %}<button type="submit" class="product-form__add-button button button--primary">{{ 'product.form.add_to_cart' | t }}</button>{% endcomment %}{% endcomment %}
{% comment %}{% endcomment %}
                  {% comment %}{%- if section.settings.show_payment_button -%}{% endcomment %}
                    {% comment %}{{ form | payment_button }}{% endcomment %}
                  {% comment %}{%- endif -%}{% endcomment %}
                {% comment %}</div>{% endcomment %}
              {% comment %}</div>{% endcomment %}
{% comment %}{% endcomment %}
              {% comment %}{%- if section.settings.show_description and section.settings.description_below_add_to_cart -%}{% endcomment %}
                {% comment %}<div class="product-meta__description rte">{% endcomment %}
                  {% comment %}{{ 'home_page.onboarding.product_description' | t }}{% endcomment %}
                {% comment %}</div>{% endcomment %}
              {% comment %}{%- endif -%}{% endcomment %}
{% comment %}{% endcomment %}
              {% comment %}{%- if section.settings.show_share_buttons -%}{% endcomment %}
                {% comment %}<div class="product-meta__share-buttons hidden-tablet-and-up">{% endcomment %}
                  {% comment %}<span class="text--strong">{{ 'product.general.share' | t }}</span>{% endcomment %}
                  {% comment %}{{ share_buttons }}{% endcomment %}
                {% comment %}</div>{% endcomment %}
              {% comment %}{%- endif -%}{% endcomment %}
            {% comment %}</div>{% endcomment %}
          {% comment %}</div>{% endcomment %}
        </div>
      {%- endunless -%}
    </div>
  </div>

  {%- unless product.empty? -%}
    <script>
      window.ShopifyXR=window.ShopifyXR||function(){(ShopifyXR.q=ShopifyXR.q||[]).push(arguments)};
      ShopifyXR('addModels', {{ product.media | where: 'media_type', 'model' | json }});
    </script>
  {%- endunless -%}
</section>

{% schema %}
{
  "name": "Featured product",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Featured product"
    },
    {
      "type": "text",
      "id": "link_title",
      "label": "Link title",
      "default": "View details"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL",
      "info": "If empty, the product URL is used."
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_sku",
      "label": "Show SKU",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_share_buttons",
      "label": "Show share buttons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show description",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "description_below_add_to_cart",
      "label": "Description below add to cart",
      "default": false
    },
    {
      "type": "select",
      "id": "selector_mode",
      "label": "Selector type",
      "options": [
        {
          "value": "block",
          "label": "Block"
        },
        {
          "value": "dropdown",
          "label": "Dropdown"
        }
      ],
      "default": "block"
    },
    {
      "type": "select",
      "id": "color_mode",
      "label": "Color selector type",
      "info": "Variant image mode requires that all variant has an associated image. [Learn more](https://help.shopify.com/en/manual/products/product-variant-images#add-images-to-existing-variants)",
      "options": [
        {
          "value": "block",
          "label": "Block"
        },
        {
          "value": "dropdown",
          "label": "Dropdown"
        },
        {
          "value": "color",
          "label": "Color swatch"
        },
        {
          "value": "variant_image",
          "label": "Variant image"
        }
      ],
      "default": "color"
    },
    {
      "type": "checkbox",
      "id": "show_quantity_selector",
      "label": "Show quantity selector",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_reviews_badge",
      "label": "Show reviews badge",
      "info": "You need to install [Shopify's free Product Reviews](https://apps.shopify.com/product-reviews) app before enabling this option.",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_payment_button",
      "label": "Show dynamic checkout button",
      "info": "Each customer will see their preferred payment method from those available on your store, such as PayPal or Apple Pay. [Learn more](https://help.shopify.com/manual/using-themes/change-the-layout/dynamic-checkout)",
      "default": true
    },
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "paragraph",
      "content": "Learn more about [media types](https://help.shopify.com/en/manual/products/product-media)"
    },
    {
      "type": "select",
      "id": "image_size",
      "label": "Size",
      "info": "Only applicable on desktop screens",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "small"
    },
    {
      "type": "checkbox",
      "id": "enable_image_zoom",
      "label": "Enable image zoom",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_video_looping",
      "label": "Enable video looping",
      "default": false
    },
    {
      "type": "select",
      "id": "zoom_effect",
      "label": "Zoom effect",
      "options": [
        {
          "value": "inside",
          "label": "Inside"
        },
        {
          "value": "outside",
          "label": "Outside"
        }
      ],
      "default": "outside"
    },
    {
      "type": "select",
      "id": "carousel_effect",
      "label": "Transition effect",
      "options": [
        {
          "value": "fade",
          "label": "Fade"
        },
        {
          "value": "slide",
          "label": "Slide"
        }
      ],
      "default": "fade"
    },
    {
      "type": "header",
      "content": "Inventory"
    },
    {
      "type": "paragraph",
      "content": "You can also add a stock countdown. [Learn more](https://support.maestrooo.com/article/177-product-show-an-stock-countdown-bar)."
    },
    {
      "type": "checkbox",
      "id": "show_inventory_quantity",
      "label": "Show inventory quantity",
      "default": false
    },
    {
      "type": "range",
      "id": "low_inventory_threshold",
      "label": "Low inventory threshold",
      "info": "Use low stock color when quantity is below the threshold. Choose 0 to always show in stock.",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0
    }
  ],
  "presets": [
    {
      "category": "Product",
      "name": "Featured product"
    }
  ]
}
{% endschema %}